openapi: 3.0.0
info:
  title: DummyJSON Auth & Posts API
  description: API documentation for the Authentication and CRUD operations used in the React Dashboard.
  version: 1.0.0
servers:
  - url: https://dummyjson.com
    description: DummyJSON Production Server
tags:
  - name: Auth
    description: Authentication operations
  - name: Posts
    description: CRUD operations for Posts
paths:
  /auth/login:
    post:
      tags:
        - Auth
      summary: Login and get JWT token
      description: Authenticate a user and receive user details along with a JWT token.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/LoginRequest'
            example:
              username: "emilys"
              password: "emilyspass"
              expiresInMins: 60
      responses:
        '200':
          description: Successful login
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/AuthResponse'
        '400':
          description: Invalid credentials
  /posts:
    get:
      tags:
        - Posts
      summary: Get all posts
      description: Retrieve a paginated list of posts.
      parameters:
        - name: limit
          in: query
          description: Number of posts to return
          required: false
          schema:
            type: integer
            default: 30
        - name: skip
          in: query
          description: Number of posts to skip
          required: false
          schema:
            type: integer
            default: 0
      responses:
        '200':
          description: A list of posts
  /posts/add:
    post:
      tags:
        - Posts
      summary: Create a new post
      description: Adds a new post. Note that this mock API will not actually save the post to the server.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/PostRequest'
            example:
              title: "My New Post"
              body: "This is the content of my new post."
              userId: 5
      responses:
        '201':
          description: Post created successfully
  /posts/{id}:
    put:
      tags:
        - Posts
      summary: Update a post
      description: Update an existing post by ID.
      parameters:
        - name: id
          in: path
          required: true
          description: ID of the post to update
          schema:
            type: integer
            example: 1
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/PostRequest'
            example:
              title: "Updated Post Title"
      responses:
        '200':
          description: Post updated successfully
    delete:
      tags:
        - Posts
      summary: Delete a post
      description: Delete a post by ID.
      parameters:
        - name: id
          in: path
          required: true
          description: ID of the post to delete
          schema:
            type: integer
            example: 1
      responses:
        '200':
          description: Post deleted successfully

components:
  schemas:
    LoginRequest:
      type: object
      required:
        - username
        - password
      properties:
        username:
          type: string
        password:
          type: string
        expiresInMins:
          type: integer
    AuthResponse:
      type: object
      properties:
        id:
          type: integer
        username:
          type: string
        email:
          type: string
        firstName:
          type: string
        lastName:
          type: string
        token:
          type: string
    PostRequest:
      type: object
      properties:
        title:
          type: string
        body:
          type: string
        userId:
          type: integer